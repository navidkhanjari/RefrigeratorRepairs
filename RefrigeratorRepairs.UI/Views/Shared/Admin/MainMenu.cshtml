@{
    var selected = ViewData["selected"]?.ToString() ?? "";
}
<div class="main-menu menu-fixed menu-dark menu-accordion menu-shadow" data-scroll-to-active="true">

    

    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item mr-auto">
                <a class="navbar-brand" href="/AdminPannel">
                    <div class="brand-logo"><img class="logo" src="/Admin/assets/images/logo/logo.png"></div>
                    <h2 class="brand-text mb-0">پنل مدیریت</h2>
                </a>
            </li>
            <li class="nav-item nav-toggle"><a class="nav-link modern-nav-toggle pr-0" data-toggle="collapse"><i class="bx bx-x d-block d-xl-none font-medium-4 primary"></i><i class="toggle-icon bx bx-disc font-medium-4 d-none d-xl-block primary" data-ticon="bx-disc"></i></a></li>
        </ul>
    </div>

    <div class="shadow-bottom"></div>
    <div class="main-menu-content">
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation" data-icon-style="lines">
            <li class="nav-item @(selected == "Dashboard" ? "active" : null)">
                <a href="/AdminPannel"><i class="menu-livicon" data-icon="dashboard"></i><span class="menu-title" data-i18n="Dashboard">داشبورد</span></a>
            </li>
        </ul>
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation" data-icon-style="lines">
            <li class="nav-item @(selected == "Article_" ? "active" : null)">
                <a href="javascript:void(0)"><i class="menu-livicon" data-icon="grid"></i><span class="menu-title" data-i18n="Dashboard">مدیریت مقالات</span></a>
                <ul class="menu-content">
                    <li class="@(selected == "Article_Index" ? "active" : null)">
                        <a href="/Admin/Articles"><i class="bx bx-left-arrow-alt"></i><span class="menu-item" data-i18n="Analytics">لیست مقالات</span></a>
                    </li>
                    <li class="@(selected == "Article_Add" ? "active" : null)">
                        <a href="/Admin/Article/Add"><i class="bx bx-left-arrow-alt"></i><span class="menu-item" data-i18n="eCommerce">افزودن مقاله جدید</span></a>
                    </li>
                </ul>
            </li>
        </ul>

        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation" data-icon-style="lines">
            <li class="nav-item">
                <a href="javascript:void(0)"><i class="menu-livicon" data-icon="desktop"></i><span class="menu-title" data-i18n="Dashboard">تنظیمات سایت</span></a>
                <ul class="menu-content">
                    <li class="@(selected == "Setting_Index" ? "active" : null)">
                        <a href="/Admin/Settings"><i class="bx bx-left-arrow-alt"></i><span class="menu-item" data-i18n="eCommerce">اطلاعات</span></a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
