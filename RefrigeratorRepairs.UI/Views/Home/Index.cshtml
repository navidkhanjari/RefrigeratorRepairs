@model RefrigeratorRepairs.UI.ViewModels.SiteSetting.SiteSettingDetailViewModel
@using RefrigeratorRepairs.UI.Utilities
@{
    ViewData["Title"] = "صفحه اصلی";
}
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="section-title mb-4 pb-2">
                    <h4 class="title mb-4">چه کاری انجام می دهیم؟</h4>
                    <p class="text-muted para-desc mb-0 mx-auto">@Model.WhatWeDo</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-4 mt-4 pt-2">
                <div class="card features fea-primary rounded p-4 bg-light text-center position-relative overflow-hidden border-0">
                    <span class="h1 icon2 text-primary">
                        <i class="uil uil-wrench"></i>
                    </span>
                    <div class="card-body p-0 content">
                        <h5>تعمیرات در محل</h5>
                        <p class="para text-muted mb-0">تیم فنی آماده خدمات رسانی در محل می باشد.</p>
                    </div>
                    <span class="big-icon text-center">
                        <i class="uil uil-wrench"></i>
                    </span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 mt-4 pt-2">
                <div class="card features fea-primary rounded p-4 bg-light text-center position-relative overflow-hidden border-0">
                    <span class="h1 icon2 text-primary">
                        <i class="uil uil-clock"></i>
                    </span>
                    <div class="card-body p-0 content">
                        <h5>صرفه جویی در زمان</h5>
                        <p class="para text-muted mb-0">در کمترین زمان ممکن یخچال خود را تعمیر کنید.</p>
                    </div>
                    <span class="big-icon text-center">
                        <i class="uil uil-clock"></i>
                    </span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 mt-4 pt-2">
                <div class="card features fea-primary rounded p-4 bg-light text-center position-relative overflow-hidden border-0">
                    <span class="h1 icon2 text-primary">
                        <i class="uil uil-shield-check"></i>
                    </span>
                    <div class="card-body p-0 content">
                        <h5>سرویس مورد اعتماد</h5>
                        <p class="para text-muted mb-0">کار را به کاردون بسپارید و با خیال راحت انتخاب کنید.</p>
                    </div>
                    <span class="big-icon text-center">
                        <i class="uil uil-shield-check"></i>
                    </span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 mt-4 pt-2">
                <div class="card features fea-primary rounded p-4 bg-light text-center position-relative overflow-hidden border-0">
                    <span class="h1 icon2 text-primary">
                        <i class="uil uil-hard-hat"></i>
                    </span>
                    <div class="card-body p-0 content">
                        <h5>نیروی متخصص</h5>
                        <p class="para text-muted mb-0"> تخصص کافی در خصوص انواع برند.</p>
                    </div>
                    <span class="big-icon text-center">
                        <i class="uil uil-hard-hat"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container mt-100 mt-60">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-6 mt-4 mt-lg-0 pt-2 pt-lg-0">
                        <div class="card work-container work-modern overflow-hidden rounded border-0 shadow-md">
                            <div class="card-body p-0">
                                <img src="/Site/images/Home/pic3.jpg" class="img-fluid" alt="work-image">
                                <div class="overlay-work bg-dark"></div>
                                <div class="content">
                                    <a href="javascript:void(0)" class="title text-white d-block fw-bold">ضمانت قطعات</a>
                                    <small class="text-light">بکار گیری  بهترین قطعات</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-6">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 mt-4 mt-lg-0 pt-2 pt-lg-0">
                                <div class="card work-container work-modern overflow-hidden rounded border-0 shadow-md">
                                    <div class="card-body p-0">
                                        <img src="/Site/images/Home/pic2.jpg" class="img-fluid" alt="work-image">
                                        <div class="overlay-work bg-dark"></div>
                                        <div class="content">
                                            <a href="javascript:void(0)" class="title text-white d-block fw-bold">تعمیرات در محل</a>
                                            <small class="text-light">خودتان ناظر باشید</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12 mt-4 pt-2">
                                <div class="card work-container work-modern overflow-hidden rounded border-0 shadow-md">
                                    <div class="card-body p-0">
                                        <img src="/Site/images/Home/pic1.jpg" class="img-fluid" alt="work-image">
                                        <div class="overlay-work bg-dark"></div>
                                        <div class="content">
                                            <a href="javascript:void(0)" class="title text-white d-block fw-bold">اعزام فوری</a>
                                            <small class="text-light">در کمترین زمان ممکن</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 mt-4 mt-lg-0 pt- pt-lg-0">
                <div class="ms-lg-4">
                    <div class="section-title mb-4 pb-2">
                        <h4 class="title mb-4">چرا ما را انتخاب کنید؟</h4>
                        <p class="text-muted para-desc">در میان لوازم خانگی معمولا یخچال یکی از مهم‌ترین لوازم خانگی برقی است که وجود آن در هر خانه ضروری است. خراب شدن یخچال یکی از نگرانی‌های مهم برای هر خانواده‌ای محسوب می‌شود زیرا در صورتی که تعمیر یخچال زمان‌بر باشد؛ می‌تواند زندگی افراد را مختل کند.</p>
                        <p class="text-muted para-desc mb-0">شما می‌توانید با ما تماس بگیرید و در سریع ترین زمان یخچال خود را تعمیر کنید.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="section-title text-center mb-4 pb-2">
                    <h6 class="text-primary">فرآیند کار</h6>
                    <h4 class="title mb-4">چگونه کار می کنیم؟</h4>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mt-4 pt-2">
                <div class="card features feature-clean work-process bg-transparent process-arrow border-0 text-center">
                    <div class="icons text-primary text-center mx-auto">
                        <i class="uil uil-wrench d-block rounded h3 mb-0"></i>
                    </div>

                    <div class="card-body">
                        <h5 class="text-dark">تحویل کار</h5>
                        <p class="text-muted mb-0">در کمترین زمان یخچال شما را تعمیر خواهیم کرد و آن را به شما تحویل میدهیم.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mt-md-5 pt-md-3 mt-4 pt-2">
                <div class="card features feature-clean work-process bg-transparent process-arrow border-0 text-center">
                    <div class="icons text-primary text-center mx-auto">
                        <i class="uil uil-presentation-check d-block rounded h3 mb-0"></i>
                    </div>

                    <div class="card-body">
                        <h5 class="text-dark">ارزیابی</h5>
                        <p class="text-muted mb-0">زمان تقریبی و هزینه کار را به شما اطلاع میدهیم.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mt-md-5 pt-md-5 mt-4 pt-2">
                <div class="card features feature-clean work-process bg-transparent d-none-arrow border-0 text-center">
                    <div class="icons text-primary text-center mx-auto">
                        <i class="uil uil-calling d-block rounded h3 mb-0"></i>
                    </div>

                    <div class="card-body">
                        <h5 class="text-dark">تماس با ما</h5>
                        <p class="text-muted mb-0">با ما تماس بگیرید و مشکل خود را بازگو کنید.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section IndexHeader{
    <section class="bg-home d-flex align-items-center" style="background: url('@FilePath.BackgroundImagePath@Model.BackgrondImageName') top;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="title-heading text-center">
                        <h4 class="heading fw-bold text-white title-dark mb-3">@Model.TextInBackground</h4>
                        <div class="mt-4 pt-2">
                            <a href="ContactUs" class="btn btn-primary">تماس با ما</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@section Header{
    @await Component.InvokeAsync("SiteHeader")
}
@section Footer{
    @await Component.InvokeAsync("SiteFooter")
}